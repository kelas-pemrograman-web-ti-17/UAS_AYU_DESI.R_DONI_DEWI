include  ../../admin/index
// Content Wrapper. Contains page content
.content-wrapper
    // Content Header (Page header)
    section.content-header
        h1
            | Data Penjualan
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    |  Home
            li
                a(href='#') Tables
            li.active Data tables
    // Main content
    section.content
        .row
            .col-xs-12
                // /.box-body
                // /.box
                .box
                    .box-body
                        .box.box-info
                            .box-header.with-border
                                h3.box-title Input Data Penjualan
                            // /.box-header
                            // form start
                            form.form-horizontal(method="POST", action='/'+penjualans._id + '/editpenjualan')
                                .box-body
                                    .form-group
                                        label.col-sm-2.control-label(for='nopenjualan') No Penjualan
                                        .col-sm-10
                                            input#nopenjualan.form-control(type='text' name="nopenjualan" placeholder='No Penjualan' value= (nopenjualan == undefined) ? pelanggans.nopenjualan: nopenjualan)
                                    .form-group
                                        label.col-sm-2.control-label(for='tglpenjualan') Tanggal Penjualan
                                        .col-sm-10
                                            input#tglpenjualan.form-control(type='text' name="tglpenjualan" placeholder='Tanggal Penjualan' value= (tglpenjualan == undefined) ? pelanggans.tglpenjualan: tglpenjualan)
                                    .form-group
                                        label.col-sm-2.control-label(for='harga') Harga
                                        .col-sm-10
                                            input#harga.form-control(type='text' name="harga" placeholder='Harga' value= (harga == undefined) ? pelanggans.harga: harga)
                                    .form-group
                                        label.col-sm-2.control-label(for='jumlah') Jumlah
                                        .col-sm-10
                                            input#email.form-control(type='text' name="jumlah" placeholder='Jumlah' value= (jumlah == undefined) ? pelanggans.jumlah: jumlah)
                                    .form-group
                                        label.col-sm-2.control-label(for='diskon') Diskon
                                        .col-sm-10
                                            input#diskon.form-control(type='text' name="diskon" placeholder='Diskon' value= (diskon == undefined) ? pelanggans.diskon: diskon)

                                // /.box-body
                                .box-footer
                                    button.btn.btn-info.pull-right(type='submit') Input Data
                                // /.box-footer